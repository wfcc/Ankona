%h2 Listing authors

= form_tag :authors, method: :get do
  Filter by name, or by handle:
  = text_field_tag 'search_name', '', size: 20
  = submit_tag 'Apply'

.clearboth
  - if can? :add, Author
    = link_to ' New person ', new_author_path, class: :button

.page-bar.clearfix
  = will_paginate @authors
  .pagestat= page_entries_info @authors

-#= will_paginate @authors
.pagestat= page_entries_info @authors

%table.authors
  %tr
    %th &nbsp;
    %th Handle
    %th Name
    %th Original spelling
    %th Traditional spelling
    - if can? :delete, Author
      %th DEL
    - @authors.each do |author|
      - url = (can?(:edit, author) ? edit_author_url(author) : url_for(author))
      %tr.clickable(onclick = "window.location.href = '#{url}'")
        %td.fs-xx-small
          = author.source
        %td.fs-small
          = author.code
        %td.fs-larger
          = author.name
        %td(style = 'color:brown') 
          = author.original
        %td= author.traditional
        - if can? :delete, author
          %td= link_to 'â˜’', author, :confirm => 'Are you sure?', :method => :delete


